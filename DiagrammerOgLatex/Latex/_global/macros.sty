%--------Figurer-----------

\newcommand{\insertfigure}[4]{
\begin{figure}[H]
\centering
  \includegraphics[width=#2\textwidth,keepaspectratio]{/#1}
  \caption{#4}
  \figurelabel{#3}
\end{figure}
}

