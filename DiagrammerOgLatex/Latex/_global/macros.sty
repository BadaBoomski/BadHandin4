%Use case tabel enviroments
\newenvironment{usecase}[2]
{
  \begin{table}[H]
    \caption{Use Case beskrivelse for Use Case #1}
    \tablelabel{UC#1}
    \rowcolors{2}{gray!25}{white}
    \begin{tabular}{ L{120px} | L{\linewidth-180px} }
      \hline
      \rowcolor{gray!50}
      \textbf{Navn} & \textbf{UC#1: #2}\\ [5px]
      \hline
}
{
      \hline
    \end{tabular}
  \end{table}
}

\newenvironment{usecasecontinued}[2]
{
  \begin{table}[H]
    \caption*{Tabel \reftable{UC#1} - Fortsat: Use Case beskrivelse for Use Case #1}
    \rowcolors{2}{gray!25}{white}
    \begin{tabular}{ L{120px} | L{\linewidth-180px} }
      \hline
      \rowcolor{gray!50}
      \textbf{Navn} & \textbf{UC#1: #2}\\ [5px]
      \hline
}
{
      \hline
    \end{tabular}
  \end{table}
}

% Use case section + tabel makro
\newenvironment{usecasesection}[2]{
  \subsubsection{Use Case #1: #2}
  På Tabel \reftable{UC#1} ses Use Case beskrivelsen for Use Case #1.
  \begin{usecase}{#1}{#2}
}
{
  \end{usecase}
}

